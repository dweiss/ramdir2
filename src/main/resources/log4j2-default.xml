<?xml version="1.0" encoding="UTF-8"?>

<Configuration xmlns:xi="http://www.w3.org/2001/XInclude" status="WARN"
  packages="com.carrotsearch.progresso.log4j">

  <Appenders>
    <ProgressAwareAppender name="appender-console-info" printStackTraces="true">
      <ThresholdFilter level="INFO" />
    </ProgressAwareAppender>
  </Appenders>

  <Loggers>
    <Root level="TRACE">
      <AppenderRef ref="appender-console-info" />
    </Root>
  </Loggers>
</Configuration>
